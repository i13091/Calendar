<UserControl
    x:Class="CalenderApp1.TextBoxinput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CalenderApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="80"
    d:DesignWidth="200">
    
    <Grid>
        <!-- 上pp.207-213参照  -->
        <Thumb DragStarted="OnThumbDragStarted"
               DragDelta="OnThumbDragDelta"
               DoubleTapped="OnTumbDoubleTapped"
               Tapped="OnTumbTapped"
               ManipulationDelta="OnThumbManipulationDelta"
               Margin="0 0 0 0" Opacity="0"/>

        <TextBox x:Name="txtbox" Foreground="Aqua" Text="abcdefg" IsHitTestVisible="False" LostFocus="TextBoxLostFocus" ManipulationDelta="OnThumbManipulationDelta" Margin="-138,-15,-82,-16"/>
    </Grid>
</UserControl>
